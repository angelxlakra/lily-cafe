generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  type String
  description String
  basePrice Float
  veg Boolean
  nonVeg Boolean
  egg Boolean
  stock Int
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  items OrderItem[]
  table Int
  orderNo Int
  confirmed Boolean @default(false)
  served Boolean @default(false)
  paid Boolean @default(false)
  paymentForm String?
  phone String
}

type OrderItem {
  id String
  name String
  quantity Int
  additional String?
}